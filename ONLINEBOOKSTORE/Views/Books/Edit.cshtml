@model ONLINEBOOKSTORE.Models.Book

<h2>Edit Book</h2>

<form asp-controller="Books" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mt-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" id="Title" name="Title" value="@Model.Title" />
    </div>
    <div class="mt-3">
        <label asp-for ="Author" class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author" id="Author" name="Author" value="@Model.Author" />
    </div>
    <div class="mt-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" id="Description" name="Description" value="@Model.Description" />
    </div>
    <div class="mt-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" id="Price" name="Price" value="@Model.Price" />
    </div>
    <div class="mt-3">
        <label class="form-label">Image Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl"  value="@Model.ImageUrl"/>
    </div>

    <button type="submit" class="btn btn-primary">Edit Book</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



