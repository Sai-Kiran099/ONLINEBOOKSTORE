@model List<ONLINEBOOKSTORE.Models.Book>

<h1>Books List</h1>

<a asp-controller="Books" class="btn btn-secondary" asp-action="Create">Add New Book</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th> Price</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var books in Model)
        {
            <tr>
                <td>
                    @books.Title
                </td>
                <td>
                    @books.Author
                </td>
                <td>
                    @books.Price
                </td>
               
                <td>
                    <a class="btn btn-primary" asp-controller="Books" asp-action="Edit" asp-route-id="@books.Id">Edit</a>
                    <a href="@Url.Action("Delete","Books",new{id=@books.Id})" class="btn btn-danger">Delete</a>
                </td>
                
                
            </tr>
        }
    </tbody>
    </table>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
